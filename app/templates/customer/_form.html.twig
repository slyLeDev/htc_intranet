<div class="p-2">
    {% include 'flash_message/index.html.twig' %}

    {{ form_start(form, {'attr': {'id': 'form_customer'}}) }}
        <h6>
            Vous êtes en train de {{ is_new ? 'créer' : 'modifier' }} le client avec l'identifiant :
            <span class="badge badge-primary" style="font-size: 18px;">#{{ the_id }}</span>
        </h6>
        <hr>
        <div class="form-group">
            {{ form_widget(form.name, {'attr' : {'class': 'form-control', 'placeholder': 'Nom du client', 'autofocus' : 'true'}}) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.manager, {'attr' : {'class': 'form-control', 'placeholder': 'Nom complet du manager'}}) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.interlocutor, {'attr' : {'class': 'form-control', 'placeholder': 'Nom du/des interlocuteur(s)'}}) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.locality, {'attr' : {'class': 'form-control', 'placeholder': 'Adresse / Coordonnée du client'}}) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.phone, {'attr' : {'class': 'form-control', 'placeholder': 'Numéro téléphone des interlocuteurs'}}) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.website, {'attr' : {'class': 'form-control', 'placeholder': 'Lien du site web du client'}}) }}
        </div>
        <div class="form-group">
                <label for="customer_logoFile">Logo :</label>
                {{ form_widget(form.logoFile, {'attr' : {'class': 'form-control', 'placeholder': 'Logo'}}) }}
        </div>
        <div class="form-group">
            <label for="customer_sector">Choisissez un ou plusieurs domaines :</label>
            {{ form_widget(form.sector, {'attr' : {'class': 'form-control chosen-js', 'data-placeholder': 'Choisissez le(s) domaines(s)'}}) }}
        </div>
        <div class="row">
                {% if is_new %}
                        <div class="col-12">
                                <button class="btn btn-primary btn-user btn-block">
                                        <i class="fa fa-save mr-2"></i>
                                        {{ is_new ? 'Créer' : 'Modifier' }}
                                </button>
                        </div>
                {% else %}
                        <div class="col-6">
                                <a href="{{ path('htcintranet_customer_index') }}" class="btn btn-secondary btn-user btn-block">
                                        <i class="fa fa-backward mr-2"></i>
                                        Retour à la liste
                                </a>
                        </div>
                        <div class="col-6">
                                <button class="btn btn-primary btn-user btn-block">
                                        <i class="fa fa-save mr-2"></i>
                                        {{ is_new ? 'Créer' : 'Modifier' }}
                                </button>
                        </div>
                {% endif %}
        </div>
    {{ form_end(form) }}
</div>
