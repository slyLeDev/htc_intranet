{% extends 'base.html.twig' %}

{% block title %}HTC Intranet | Connexion{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('login') }}
{% endblock %}
{% block body %}
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <form class="login100-form validate-form">
					<span class="login100-form-title p-b-26">
						HTC INTRANET
					</span>
                    <span class="login100-form-title p-b-48">
						<img src="{{ asset('build/image/logo_htc.png') }}" alt="Logo HTC">
					</span>

                    {% include 'flash_message/index.html.twig' %}

                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3 alert alert-info">
                            Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('htcintranet_logout') }}">Se déconnecter</a>
                        </div>
                    {% endif %}

                    <div class="wrap-input100 validate-input" data-validate = "Une adresse email valide est de type : a@b.c">
                        <input class="input100" type="email" name="email" value="{{ last_username }}" id="inputEmail" placeholder="Saisissez votre adresse email" required>
                        <span class="focus-input100" data-placeholder="Email"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Mot de passe">
						<span class="btn-show-pass">
							<i class="zmdi zmdi-eye"></i>
						</span>
                        <input class="input100" type="password" name="password" id="inputPassword" required placeholder="Saisissez votre mot de passe">
                        <span class="focus-input100" data-placeholder="Mot de passe"></span>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="d-flex justify-content-between align-items-center">
                        <!-- Checkbox -->
                        <div class="form-check mb-0">
                            <input class="form-check-input me-2" type="checkbox" name="_remember_me" id="inputRememberMe"/>
                            <label class="form-check-label" for="inputRememberMe">
                                Se souvenir de moi
                            </label>
                        </div>
                    </div>

                    <!--div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button class="login100-form-btn">
                                Connexion
                            </button>
                        </div>
                    </div-->

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" class="btn btn-primary btn-lg"
                                style="padding-left: 2.5rem; padding-right: 2.5rem;">Connexion
                        </button>
                    </div>

                    <div class="text-center p-t-30">
						<span class="txt1">
							Don’t have an account?
						</span>

                        <a class="txt2" href="#">
                            Sign Up
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('login') }}
{% endblock %}
