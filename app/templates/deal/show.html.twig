{% extends 'base.html.twig' %}

{% block title %}Deal{% endblock %}

{% block body %}
    <h1>Deal</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ deal.id }}</td>
            </tr>
            <tr>
                <th>JobName</th>
                <td>{{ deal.jobName }}</td>
            </tr>
            <tr>
                <th>JobDescription</th>
                <td>{{ deal.jobDescription }}</td>
            </tr>
            <tr>
                <th>Deadline</th>
                <td>{{ deal.deadline ? deal.deadline|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ deal.comment }}</td>
            </tr>
            <tr>
                <th>SalaryMin</th>
                <td>{{ deal.salaryMin }}</td>
            </tr>
            <tr>
                <th>SalaryMax</th>
                <td>{{ deal.salaryMax }}</td>
            </tr>
            <tr>
                <th>SalaryExact</th>
                <td>{{ deal.salaryExact }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ deal.status }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ deal.createdAt ? deal.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ deal.updatedAt ? deal.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('htcintranet_deal_index') }}">back to list</a>

    <a href="{{ path('htcintranet_deal_edit', {'id': deal.id}) }}">edit</a>

    {{ include('deal/_delete_form.html.twig') }}
{% endblock %}
